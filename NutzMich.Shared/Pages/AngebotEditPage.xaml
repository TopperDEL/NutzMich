<Page
    x:Class="NutzMich.Shared.Pages.AngebotEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NutzMich.Shared.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="uno"
    xmlns:xamarin="http://uno.ui/xamarin"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <CommandBar Grid.Row="0" Content="Angebot bearbeiten" Background="RoyalBlue" Foreground="White">
                <CommandBar.PrimaryCommands>
                    <AppBarButton Icon="Save" Click="Save" Foreground="White"/>
                    <AppBarButton Icon="Cancel" Click="Cancel" Foreground="White"/>
                </CommandBar.PrimaryCommands>
            </CommandBar>

            <StackPanel Grid.Row="1" Margin="10"
						VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBox Header="Überschrift" Text="{x:Bind _angebotVM.Angebot.Ueberschrift, Mode=TwoWay}"
						  />
                <TextBox Header="Beschreibung" Text="{x:Bind _angebotVM.Angebot.Beschreibung, Mode=TwoWay}"
						  AcceptsReturn="True" MinHeight="100"/>
                <TextBox Header="Zustand" Text="{x:Bind _angebotVM.Angebot.Zustand, Mode=TwoWay}"
						  AcceptsReturn="True" MinHeight="100"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
